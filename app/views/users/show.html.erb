<div class="justify-center items-center">
  <h1 class="font-bold text-black">User Profile page</h1>
  <p class="text-gray-900 leading-none"><%=@user.firstname%> <%= @user.lastname%></p>
  <p class="text-gray-900 leading-none"><%=@user.email%></p>
  <p class="text-gray-600">Account created at: <%= @user.created_at %></p>
  <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow"><%= link_to 'Home', root_path%></button>
  <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow"><%= link_to "Edit", edit_user_path(@user)%></button>
</div>
